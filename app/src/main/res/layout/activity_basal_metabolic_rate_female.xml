<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".BasalMetabolicRateFemale">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#d21919"
        android:minHeight="?actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/backspace"
                android:onClick="clickback"/>


            <TextView
                android:textSize="18.0sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Bmr Calculator"
                android:layout_weight="10.0"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textColor="@color/colorRed"
        android:textSize="17.0sp"/>
    <EditText
        android:gravity="center"
        android:layout_marginLeft="80.0dip"
        android:layout_marginRight="80.0dip"
        android:id="@+id/edtTextage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Type your Age"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:layout_marginTop="8.0dip"
        android:textSize="14.0sp"
        android:textColorHint="@color/colorhintDark"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginBottom="16.0dip"
        android:layout_marginTop="8.0dip"/>


    <LinearLayout
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:layout_marginRight="8.0dip"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="@color/colorRed"
                android:textSize="17.0sp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:layout_marginRight="4.0dip">

                    <EditText
                        android:id="@+id/editTextHeight"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Feet"
                        android:inputType="none"
                        android:maxLines="1"
                        android:maxLength="11"
                        android:layout_marginTop="8.0dip"
                        android:textSize="14.0sp"
                        android:textColorHint="@color/colorhintDark"
                        android:drawableRight="@drawable/arrow_down_black"
                        />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginBottom="16.0dip"
                        android:layout_marginTop="8.0dip"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="4.0dip">

                    <EditText
                        android:id="@+id/editTextInch"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Inches"
                        android:inputType="none"
                        android:maxLines="1"
                        android:maxLength="11"
                        android:layout_marginTop="8.0dip"
                        android:textSize="14.0sp"
                        android:textColorHint="@color/colorhintDark"
                        android:drawableRight="@drawable/arrow_down_black"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginBottom="16.0dip"
                        android:layout_marginTop="8.0dip"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:layout_marginLeft="4.0dip">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Weight (kg)"
                android:textColor="@color/colorRed"
                android:textSize="17.0sp"/>
            <EditText
                android:id="@+id/edtTextWeightKg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Type your weight"
                android:inputType="numberDecimal"
                android:maxLength="11"
                android:maxLines="1"
                android:layout_marginTop="8.0dip"
                android:textSize="14.0sp"
                android:textColorHint="@color/colorhintDark"
                android:drawableRight="@drawable/arrow_down_white"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginBottom="16.0dip"
                android:layout_marginTop="8.0dip"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayoutCalculate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="16.0dip"
        android:gravity="center"
        android:background="@drawable/background_button"
        android:orientation="horizontal"
        android:padding="12.0dip"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:gravity="center"
            android:text="CALCULATE"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="16.0sp"/>

    </LinearLayout>
</LinearLayout>